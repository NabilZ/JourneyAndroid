<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".WelcomeActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="START DRIVING"
        android:id="@+id/driveButton"
        android:layout_centerVertical="true"
        android:layout_marginTop="96dp"
        android:onClick="startDriveTracking"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOG"
        android:id="@+id/driveLogButton"
        android:layout_marginTop="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/driveButton"
        android:onClick="startLogDrive"/>

</RelativeLayout>
